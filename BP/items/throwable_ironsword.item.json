{
  "format_version": "1.18.0",
  "minecraft:item": {
    "description": {
      "identifier": "altivelis:throwable_ironsword",
      "category":"Equipment"
    },
    "components": {
      "minecraft:display_name":{
        "value":"投げナイフ"
      },
      "minecraft:icon":{
        "texture":"iron_sword"
      },
      "minecraft:max_stack_size":1,
      "minecraft:durability":{
        "max_durability":6,
        "damage_chance":{
          "min":0,
          "max":0
        }
      },
      "minecraft:cooldown":{
        "category":"iron_sword",
        "duration":3.0
      },
      "minecraft:hand_equipped":true,
      "minecraft:weapon":{},
      "minecraft:throwable":{
        "max_draw_duration":1.0,
        "min_draw_duration":0.2,
        "launch_power_scale":1.0,
        "max_launch_power":2.0,
        "scale_power_by_draw_duration":true
      },
      "minecraft:projectile":{
        "projectile_entity":"altivelis:thrown_ironsword"
      },
      "minecraft:use_animation":"crossbow"
    },
    "events":{
      "use":{
        "sequence":[
          {
            "condition":"query.remaining_durability>=1 && query.scoreboard('reloading')==0",
            "trigger":{
              "event":"shoot",
              "target":"self"
            }
          },
          {
            "condition":"query.remaining_durability==0",
            "trigger":{
              "event":"reload",
              "target":"self"
            }
          }
        ]
      },
      "shoot":{
        "sequence":[
          {
            "damage":{
              "amount":1,
              "type":"durability"
            }
          },
          {
            "shoot":{
              "projectile":"altivelis:revolver_bullet",
              "launch_power":1.0
            }
          },
          {
            "run_command":{
              "command":"camerashake add @s 2 0.1 positional",
              "target":"holder"
            }
          }
        ]
      },
      "reload":{
        "sequence":[
          {
            "run_command":{
              "command":"playsound random.click @s ~~~ 2 2 1",
              "target":"holder"
            }
          }
        ]
      }
    }
  }
}